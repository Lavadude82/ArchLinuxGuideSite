body, html{
    width:100%;
    height:100%;
    padding:0px;
    margin:0px;
    display: flex;
    align-items: center;
    justify-content: center;
    background:rgb(33,33,33);
}
#links{
    position: relative;
width:calc(100% - 20px);
height:calc(100% - 20px);
border-radius: 10px;
grid-template-columns: 50% 50%;
grid-template-rows: 100%;

}
#guides-list{
    position: absolute;
    top:45px;
    width:calc(50% - 10px);
    left:5px;
    height:calc(100% - 40px);
    background: rgb(48,48,48);
    margin:0px;
    padding:0px;
    list-style-type: none;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content:start;
    flex-flow: column nowrap;
}
#guides-list > li {
    position: relative;
    width:100%;
    height:40px;
    margin:2.5px 0px 2.5px 0px;
}
#guides-list > li > a{
    position: absolute;
    left:2.5%;
    top:2.5%;
    width:95%;
    height:95%;
    background:rgb(61,61,61);
    color:white;
    font-family: sans-serif;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
   z-index: 2;
   transition: scale 0.1s;
}
#guides-list > li > a:hover{
    scale:105%;
}
#extra{
    position: absolute;
    top:45px;
    width:calc(50% - 10px);
    right:5px;
    height:calc(100% - 40px);
    background: rgb(48,48,48);
    margin:0px;
    padding:0px;
    border-radius: 10px;
    display:grid;
    grid-template-columns: 50% 50%;
    grid-template-rows: 50% 50%;
}
#extra > *[numb="fat32"]{
    background: url(./images/etcher-icon.png) 0 0 no-repeat;
    background-size: contain;
    background-position: center;
    margin-inline: 60px;
}
#extra > *[numb="ext2"]{
    filter:saturate(0%);
    background: url(./images/download_icon.png) 0 0 no-repeat;
    background-size: contain;
    background-position: center;
    margin-inline: 65px;
   
}
#extra > *[numb="ext3"]{
    filter:saturate(0%);
    background: url(./images/icon.webp) 0 0 no-repeat;
    background-size: contain;
    background-position: center;
    margin-inline: 60px;
}
#extra > *[numb="ext4"]{

    background: url(./images/ventoy-icon.png) 0 0 no-repeat;
    background-size: contain;
    background-position: center;
    margin-inline: 60px;
}
#extra > *{
    scale:90%;
    transition: scale 0.1s;
}
#extra > *:hover{
    scale:95%;
    filter:brightness(85%);
}
#extra > *:active{
    scale:85%
}
#pacman{
    position: fixed;
    top:5px;
    height:45px;
    width:calc(100% - 30px);
    background:rgb(48,48,48);
    margin:0px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    font-family: sans-serif;
    color:white;
    font-weight: bolder;
    font-size: 30px;
}